{
  "manifest_version": 2,
  "name": "Custom Input Box Extension",
  "version": "1.0",
  "description": "A Firefox extension to add a custom input box with Habit and Advanced modes using Gemini API.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/modeHandler.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    "assets/*",
    "content/*.css"
  ]
}